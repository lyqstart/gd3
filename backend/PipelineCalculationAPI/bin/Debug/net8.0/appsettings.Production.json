{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};User=${DB_USER};Password=${DB_PASSWORD};CharSet=utf8mb4;SslMode=Preferred;MinimumPoolSize=${DB_MIN_POOL_SIZE:5};MaximumPoolSize=${DB_MAX_POOL_SIZE:20};ConnectionTimeout=${DB_CONNECTION_TIMEOUT:30};ConnectionLifeTime=300;ConnectionReset=true;AllowUserVariables=true;"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER:PipelineCalculationAPI}",
    "Audience": "${JWT_AUDIENCE:PipelineCalculationApp}",
    "ExpiryMinutes": "${JWT_EXPIRY_MINUTES:60}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 10485760
    }
  }
}
